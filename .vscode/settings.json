{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/bazel-bin": true,
        "**/bazel-pnglib": true,
        "**/bazel-out": true,
        "**/bazel-testlogs": true,
        "**/external": true,
        ".cache": true,
    },
    "explorerExclude.backup": {},
    "files.associations": {
        "fstream": "cpp",
        "istream": "cpp",
        "new": "cpp",
        "unordered_set": "cpp",
        "numbers": "cpp"
    },
    "clangd.arguments": [
        "--header-insertion=never",
        "--compile-commands-dir=${workspaceFolder}/",
        "--query-driver=**",
    ],
    "clangd.checkUpdates": true
}